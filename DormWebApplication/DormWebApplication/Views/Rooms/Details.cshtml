@model DormWebApplication.Room

@{
    ViewData["Title"] = "Details";
}

<h3>Детальна інформація</h3>

<div>
    <h4>Кімната @Model.RoomNumber</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountPlace)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountPlace)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resident)
        </dt>
        <dd class = "col-sm-10">
            @{
                foreach(var stud in ViewBag.Students)
                {                
                    @stud.Name 
                    <br />
                }
            }   
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor.Id)
        </dd>
    </dl>
</div>

@if(User.Identity.IsAuthenticated && User.IsInRole("user"))
{
    <div>
    <a asp-action="Index">Назад</a>
    </div>
}
else
{
    <div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Змінити</a> |
    <a asp-action="Index">Назад</a>
</div>
}
