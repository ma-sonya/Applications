@model DormWebApplication.Inhabitant

@{
    ViewData["Title"] = "Create";
}

<h3>Додати мешканця</h3>

<h4 id="INHName">Мешканець:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="name" onchange="func()"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YearStudy" class="control-label"></label>
                <input asp-for="YearStudy" class="form-control" />
                <span asp-validation-for="YearStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <select asp-for="FacultyId" class ="form-control" asp-items="ViewBag.FacultyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Act" class="control-label"></label>
                <input asp-for="Act" class="form-control" />
                <span asp-validation-for="Act" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Поселити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function func(){
        let name = document.getElementById("name").value;
        document.getElementById("INHName").innerHTML = "Мешканець: " + name;
    }
</script>