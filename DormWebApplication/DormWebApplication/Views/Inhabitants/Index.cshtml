@model IEnumerable<DormWebApplication.Inhabitant>

@{
    ViewData["Title"] = "Index";
}

<h3>Мешканці</h3>

@if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
<p>
    <a asp-action="Create">Поселити нового</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearStudy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Act)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Act)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomNumber)
            </td>           
                @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {   
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Вигнати</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> 
                    </td>
                }
        </tr>
}
    </tbody>
</table>
